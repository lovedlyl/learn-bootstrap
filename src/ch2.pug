		+table("table table-responsive",
		["", "表格标题", "表格标题", "表格标题"], 
		[["", "表格单元格", "表格单元格", "表格单元格"],
		["", "表格单元格", "表格单元格", "表格单元格"],
		["", "表格单元格", "表格单元格", "表格单元格"],
		["", "表格单元格", "表格单元格", "表格单元格"]])

