include data
doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		//- 使用ie标准模式渲染
		meta(http-equiv="x-ua-compatible", content="ie=edge")
		//- 适配不同浏览器尺寸 
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		block title
			title bootstrap 学习笔记
		link(rel="stylesheet", href="styles/bootstrap.css")
		style.
			body{margin-bottom: 100px}
	body.col-xs-10.col-sm-10.col-md-10.col-lg-10.col-xs-offset-1.col-sm-offset-1.col-md-offset-1.col-lg-offset-1
		ul.list-inline
			each chapter in chapters
				li 
					a(href=chapter.url) #{chapter.name}

		block content
		//-脚本 
		script(src="scripts/bootstrap.js")